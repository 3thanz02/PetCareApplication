<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_view">
    </View>

    <ScrollView
        android:layout_width="330dp"
        android:layout_height="500dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:elevation="15dp"
        android:background="@drawable/curved_scrollview"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cat_info"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/development"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cat_development"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/developmentinfo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cat_dev_one"
                android:textColor="@color/black"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/developmentinfo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cat_dev_two"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:paddingTop="10dp"
                />

            <TextView
                android:id="@+id/developmentinfo3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cat_dev_three"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:paddingTop="10dp"
                />

            <TextView
                android:id="@+id/developmentinfo4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cat_dev_five"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:paddingTop="10dp"
                />



            <TextView
                android:id="@+id/diet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cat_diet"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="20dp"
                />
            <TextView
                android:id="@+id/dietinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cat_diet_info"
                android:textColor="@color/black"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/training"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cat_training"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="20dp"
                />

            <TextView
                android:id="@+id/traininginfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cat_training_info"
                android:textColor="@color/black"
                android:textSize="15sp"
                />


        </LinearLayout>


    </ScrollView>


    <ImageView
        android:id="@+id/dog"
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:layout_gravity="center"
        android:src="@drawable/cat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:contentDescription="@string/cat_pic"
        />
    <Button
        android:id="@+id/home"
        android:layout_width="104dp"
        android:layout_height="49dp"
        android:text="@string/cat_home"
        android:layout_marginTop="2dp"
        />


</RelativeLayout>

